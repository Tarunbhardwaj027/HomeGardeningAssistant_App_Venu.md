ğŸŒ» app.js

import { auth, db } from './firebase-config.js';
import { signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.5.2/firebase-auth.js";
import { ref, get } from "https://www.gstatic.com/firebasejs/10.5.2/firebase-database.js";

document.getElementById("login-form").addEventListener("submit", async (e) => {
  e.preventDefault();
  const email = e.target.email.value;
  const password = e.target.password.value;

  try {
    const userCredential = await signInWithEmailAndPassword(auth, email, password);
    alert("Logged in as " + userCredential.user.email);
    loadPlants();
  } catch (error) {
    alert("Login failed: " + error.message);
  }
});

function loadPlants() {
  const plantRef = ref(db, 'plants');
  get(plantRef).then(snapshot => {
    if (snapshot.exists()) {
      const plantDb = snapshot.val();
      const container = document.getElementById("plant-database");
      container.innerHTML = "<h2>Plant Database</h2>";
      Object.values(plantDb).forEach(plant => {
        container.innerHTML += `
          <div>
            <h3>${plant.name}</h3>
            <p>Watering: ${plant.watering}</p>
            <p>Sunlight: ${plant.sunlight}</p>
            <p>Soil: ${plant.soil}</p>
          </div>
        `;
      });
    } else {
      alert("No plant data found.");
    }
  });
}


